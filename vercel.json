{
  "version": 2,
  "name": "blogger-platform",
  "builds": [
    { "src": "src/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.ts",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    { "src": "/(.*)", "dest": "src/index.ts" }
  ]
}